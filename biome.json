{
	"$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noUnknownAtRules": "off"
			}
		}
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"files": {
		"includes": [
			"src/**",
			"vitest.config.*",
			"postcss.config.*",
			"tailwind.config.*",
			"next.config.*",
			"*.{ts,tsx,js,jsx,mjs,cjs,json,jsonc,md,css}"
		]
	}
}
